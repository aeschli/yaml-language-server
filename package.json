{
  "name": "yaml-language-server",
  "description": "YAML language server",
  "version": "0.9.0",
  "author": "Gorkem Ercan (Red Hat)",
  "license": "MIT",
  "contributors": [
    {
      "name": "Joshua Pinkney",
      "email": "joshpinkney@gmail.com"
    },
    {
      "name": "Google LLC"
    }
  ],
  "engines": {
    "node": "*"
  },
  "bin": {
    "yaml-language-server": "./bin/yaml-language-server"
  },
  "main": "./out/server/index.js",
  "keywords": [
    "yaml",
    "LSP"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/redhat-developer/yaml-language-server.git"
  },
  "dependencies": {
    "js-yaml": "^3.13.1",
    "jsonc-parser": "^2.2.1",
    "request-light": "^0.3.0",
    "vscode-json-languageservice": "^3.7.0",
    "vscode-languageserver": "7.0.0-next.3",
    "vscode-languageserver-types": "3.15.1",
    "vscode-languageserver-textdocument": "^1.0.1",
    "vscode-nls": "^4.1.2",
    "vscode-uri": "^2.1.1",
    "yaml-ast-parser-custom-tags": "0.0.43"
  },
  "optionalDependencies": {
    "prettier": "^1.18.2"
  },
  "devDependencies": {
    "@types/mocha": "2.2.48",
    "@types/node": "^12.11.7",
    "@types/prettier": "^1.18.0",
    "@types/webpack": "^4.4.10",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "coveralls": "^3.0.5",
    "eslint": "^7.2.0",
    "mocha": "5.0.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.12",
    "ts-node": "^5.0.1",
    "typescript": "^3.8.3",
    "ts-loader": "^4.4.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "scripts": {
    "compile": "tsc -p .",
    "compile-webworker": "webpack --config ./build/extension-browser.webpack.config.js",
    "watch": "tsc --watch -p .",
    "test": "mocha --require ts-node/register --ui tdd ./test/*.test.ts",
    "coverage": "nyc mocha --require ts-node/register --require source-map-support/register --recursive --ui tdd ./test/*.test.ts",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint -c .eslintrc.js --ext .ts src"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/",
      "out"
    ],
    "all": true
  }
}
